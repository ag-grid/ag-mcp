{
  "name": "ag-mcp",
  "version": "1.0.0",
  "description": "MCP server for AG-Grid to help developers integrate AG Grid into their applications",
  "main": "dist/index.js",
  "bin": {
    "ag-mcp": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "updateBetaVersion": "tsx ./scripts/updateBetaVersion.ts",
    "publish:dev:dry-run": "npm run updateBetaVersion && npm publish . --dry-run --registry http://52.50.158.57:4873/ --tag beta",
    "publish:dev": "npm run updateBetaVersion && npm publish . --registry http://52.50.158.57:4873/ --tag beta"
  },
  "keywords": [
    "ag-grid",
    "mcp",
    "model-context-protocol",
    "datagrid",
    "assistant",
    "llm"
  ],
  "author": "AG Grid",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ag-grid-community": "latest",
    "env-paths": "^3.0.0",
    "local-pkg": "^1.1.2",
    "node-fetch": "^3.3.2",
    "package-manager-detector": "^1.3.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.20.5",
    "typescript": "~5.2.2",
    "vitest": "^2.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*"
  ]
}
